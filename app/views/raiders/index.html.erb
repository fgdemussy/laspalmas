<p id="notice"><%= notice %></p>

<div class="row">
  <h1 class="page-header">Raiders</h1>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Lastname</th>
        <th>Rut</th>
        <th>Acceptedterms</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @raiders.each do |raider| %>
        <tr>
          <td><%= raider.name %></td>
          <td><%= raider.lastName %></td>
          <td><%= raider.rut_to_human %></td>
          <td><%= raider.acceptedTerms %></td>
          <td><%= link_to 'Show', raider %></td>
          <td><%= link_to 'Edit', edit_raider_path(raider) %></td>
          <td><%= link_to 'Destroy', raider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Raider', new_raider_path %>
</div>
