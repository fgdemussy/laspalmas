<!-- Modal for Raider created notice -->
<% unless notice.nil? %>
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Great!</h4>
      </div>
      <div class="modal-body">
        <%= notice %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
  </div>
<% end %>
<div class="header clearfix">
  <h3 class="text-muted">Parque Las Palmas</h3>
</div>

<div class="jumbotron">
  <h1>Riders registration</h1>
  <p class="lead">Please enter your RUT</p>
  <div class="input-container">
    <%= form_for(@raider, url: welcome_raiders_path, method: :post) do |f| %>
      <div class="form-group">
        <%= f.text_field :rut, class:"form-control", placeholder: "RUT" %>
      </div>
      <% unless @notice.nil? %>
      <div class="alert <%= @alert_class %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= @notice %>
      </div>
      <% end %>
      <%= f.submit "Submit", class:"btn btn-lg btn-primary" %>
    <% end %>
  </div>

</div>

<footer class="footer">
  <p>&copy; Parque Las Palmas 2015</p>
</footer>
