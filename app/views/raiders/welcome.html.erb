<!-- Modal for Rider created notice -->
<% unless notice.nil? %>
  <% if notice.include? "successfully registered" %>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Great!</h4>
        </div>
        <div class="modal-body">
          <p class="lead">
            <%= notice %>
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-success" data-dismiss="modal">Done</button>
        </div>
      </div>
    </div>
    </div>
  <% end %>
<% end %>

<div class="header clearfix">
  <h3 class="pull-left text-muted">Parque Las Palmas</h3>
  <h3 class="pull-right text-muted"> <%= Date.today.strftime("%v") %> </h3>
</div>

<div class="jumbotron">
  <h1>Rider registration</h1>
  <p class="lead">Please enter your RUT</p>
  <div class="input-container">
    <%= form_for(@raider, url: welcome_raiders_path, method: :post) do |f| %>
      <div class="form-group">
        <%= f.text_field :rut, class:"form-control", placeholder: "RUT" %>
      </div>
      <% unless @notice.nil? %>
      <div class="alert <%= @alert_class %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= @notice %>
      </div>
      <% end %>
      <%= f.submit "Submit", class:"btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>

<footer class="footer clearfix">
  <div class="pull-left">&copy; Parque Las Palmas</div>
  <% if user_signed_in? %>
    <%= link_to('Logout', destroy_user_session_path, class: "btn btn-danger btn-xs pull-right", method: :delete) if user_signed_in? %>
    <span class="pull-right">&nbsp</span>
  <% end %>
  <%= link_to 'Admin', raiders_url, class: "btn btn-default btn-xs pull-right" %>
</footer>
